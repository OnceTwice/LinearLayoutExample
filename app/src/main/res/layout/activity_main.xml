<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button01"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton1Clicked"
        android:text="일반적인 경우"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button05"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton5Clicked"
        android:text="baseline 사용하기"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button03"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton3Clicked"
        android:text="gravity 사용하기"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton6Clicked"
        android:text="gravity : left|top"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton7Clicked"
        android:text="gravity : center_vertical|center_horizontal"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton8Clicked"
        android:text="gravity : right|bottom"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button02"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton2Clicked"
        android:text="공간 사용하기"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button04"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton4Clicked"
        android:text="weight 사용하기"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button09"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onButton9Clicked"
        android:text="자바 코드로 만들기"
        android:textSize="16dp"
        android:textStyle="bold" />

</LinearLayout>